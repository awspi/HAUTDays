<view>
<van-popup
show="{{ isPopupShow }}"
round
overlay="{{!isBlurPopupShow}}"
lock-scroll
position="top"
custom-style="height: 20%;width:100%"
bind:close="onClose"
>
<text style="margin-top: 100rpx; display: block; text-align: center;font-size: 32rpx;color: #EC6A8E;font-weight: 800;">HAUTDays</text>
<view style="padding-top: 20rpx;">
<van-grid clickable border="{{ false }}"
icon-size="32px">
<van-grid-item icon="exchange" text="重新加载" bind:click="onUpdateHandler"/>
<van-grid-item icon="photo-o" text="自定义背景" bind:click="onChangeBgHandler"/>
<van-grid-item icon="brush-o" text="透明度"  bind:click="onBlurHandler" />
<van-grid-item icon="question-o" text="使用方法"   bind:click="onHelpHandler"/>
</van-grid>
</view>
</van-popup>
<!-- 修改透明度 -->
<van-popup
  show="{{ isBlurPopupShow }}"
  custom-style=" width:100%;height:25%; padding:100rpx 60rpx 30rpx"
  bind:close="onClose"
  round
  lock-scroll
  position="top"
  overlay="{{false}}"
>

<view>
<view style="position:fixed;left: 50%;transform: translateX(-50%);">
    <van-button icon="replay" color="#EC6A8E" size="small" round bind:click="onCloseBlurPopup" >保存</van-button>
</view>
<view style="padding: 0 16rpx 20rpx;">
    <text class="title">背景高斯模糊</text>
    <van-slider value="{{blur}}" max="5" step="0.1" bind:drag="onBlurDrag" />
</view>
<view style="padding: 0 16rpx 20rpx;">
    <text class="title">课程格子透明度</text>
    <van-slider value="{{opacity}}" max="1" step="0.1" bind:drag="onOpacityDrag" />
</view>

</view>
</van-popup>
组件
<van-toast id="van-toast" />
</view>

