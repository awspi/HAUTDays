/* pages/schedule/schedule.wxss */



/* 自定义导航栏 */
.bg-theme{
    background-color: #EC6A8E;
}
.navbar {
	height: 65rpx;
    display: flex;
    position: relative;
    padding-bottom: 15rpx;
	justify-content: center;
	align-items: center;
	width: 100%;
    font-size: 28rpx;
    color: white;
}
.popup {
	position: absolute;
	left: 30rpx;
	margin-bottom: 10rpx;
	z-index: 999;
}
.week {
	display: flex;
    font-size: 24rpx;
    width: 100%;
    flex-wrap: nowrap;
    height: 5%;
    color: white;
}
.week_date {
	width: calc(94% / 7);
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

/* 课表左侧 */
.left  {
    position: fixed;
    left: 0;
    width: 8%;
    height: 80%;
	display: flex;
	flex-direction: column;
	align-items: center;
    font-size: 20rpx;
    text-align: center;
    /* background-color: aqua; */
}
.left-item{
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 9%;
    border-top: 1rpx dotted #f0a8bc;
    border-right: 1rpx dotted #f0a8bc;
    background-color:#fff5f8;
    color: #EC6A8E;
}
/* 课表右侧 */
.right {
    height: 80vh; 
    position: relative; 
    left: 8%; 
    width: 92%;
	display: flex;
	flex-shrink: 0;
    font-weight: bolder;
}


.card {
    /* margin-top: 3rpx;
    margin-left: 2rpx; */
    position: absolute;
	width: 14%;
	color: white;
	font-size: 22rpx;
	padding: 6rpx 0 0 6rpx;
	word-break: break-word;
	box-sizing: border-box;
    overflow-y: hidden;
    border-radius: 7%;
}
